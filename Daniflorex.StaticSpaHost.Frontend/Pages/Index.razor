@page "/"
@implements IDisposable
@inject HttpClient Http
@inject PersistentComponentState ApplicationState

<PageTitle>Index</PageTitle>

@if (cmsData == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h1>@cmsData.fields.title</h1>

    @((MarkupString)cmsData.fields.text)
}

